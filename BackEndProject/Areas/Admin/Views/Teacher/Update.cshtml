@model Teacher;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper col-11">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Products</h4>
                    <p class="card-description">
                        Product Create
                    </p>
                    <h4 class="card-title" style="margin-top:40px">Current Teacher Photo</h4>
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                    <img src="~/admin/images/faces/@Model.Image" width="100" alt="Alternate Photo" />
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Photo">Photo</label>
                            <input class="form-control" asp-for="Photo" placeholder="Photo">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Fullname">Fullname</label>
                            <input class="form-control" asp-for="Fullname" placeholder="Fullname">
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Profession">Profession</label>
                            <input class="form-control" asp-for="Profession" placeholder="Profession">
                            <span asp-validation-for="Profession" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <input class="form-control" asp-for="Description" placeholder="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Degree">Degree</label>
                            <input class="form-control" asp-for="Degree" placeholder="Degree">
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Experience">Experience</label>
                            <input class="form-control" asp-for="Experience" placeholder="Experience">
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Hobbies">Hobbies</label>
                            <input class="form-control" asp-for="Hobbies" placeholder="Hobbies">
                            <span asp-validation-for="Hobbies" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Faculty">Faculty</label>
                            <input class="form-control" asp-for="Faculty" placeholder="Faculty">
                            <span asp-validation-for="Faculty" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Mail">Mail</label>
                            <input class="form-control" asp-for="SocialMedias.Mail" placeholder="Mail">
                            <span asp-validation-for="SocialMedias.Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Number">Number</label>
                            <input class="form-control" asp-for="SocialMedias.Number" placeholder="Number">
                            <span asp-validation-for="SocialMedias.Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Instagram">Instagram</label>
                            <input class="form-control" asp-for="SocialMedias.Instagram" placeholder="Instagram">
                            <span asp-validation-for="SocialMedias.Instagram" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Facebook">Facebook</label>
                            <input class="form-control" asp-for="SocialMedias.Facebook" placeholder="Facebook">
                            <span asp-validation-for="SocialMedias.Facebook" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Pinterest">Pinterest</label>
                            <input class="form-control" asp-for="SocialMedias.Pinterest" placeholder="Pinterest">
                            <span asp-validation-for="SocialMedias.Pinterest" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Twitter">Twitter</label>
                            <input class="form-control" asp-for="SocialMedias.Twitter" placeholder="Twitter">
                            <span asp-validation-for="SocialMedias.Twitter" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Language">Language</label>
                            <input class="form-control" asp-for="Skills.Language" min="0" max="100" placeholder="Language">
                            <span asp-validation-for="Skills.Language" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="TeamLeader">Team Leader</label>
                            <input class="form-control" asp-for="Skills.TeamLeader" min="0" max="100" placeholder="Team Leader">
                            <span asp-validation-for="Skills.TeamLeader" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Developmnet">Developmnet</label>
                            <input class="form-control" asp-for="Skills.Development" min="0" max="100" placeholder="Developmnet">
                            <span asp-validation-for="Skills.Development" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Design">Design</label>
                            <input class="form-control" asp-for="Skills.Design" min="0" max="100" placeholder="Design">
                            <span asp-validation-for="Skills.Design" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Innovation">Innovation</label>
                            <input class="form-control" asp-for="Skills.Innovation" min="0" max="100" placeholder="Innovation">
                            <span asp-validation-for="Skills.Innovation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Communication">Communication</label>
                            <input class="form-control" asp-for="Skills.Communication" min="0" max="100" placeholder="Communication">
                            <span asp-validation-for="Skills.Communication" class="text-danger"></span>
                        </div>
                        <div class="form-check form-check-flat form-check-primary">
                            <button type="submit" class="btn btn-warning mr-2">Update</button>
                            <a class="btn btn-light" asp-action="Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

