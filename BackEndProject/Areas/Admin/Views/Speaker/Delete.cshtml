@model Speaker
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper  col-11">
    <div class="row">
        <div class="col-lg-12" style="padding-left:55px">
            <div style="width:200px; height:auto; margin-bottom: 25px">
                <img src="~/admin/images/faces/@Model.Image" style="width:100%; height:auto" />
            </div>
            <h4> <span style="color:red">Fullname:</span> @Model.Fullname</h4>
            <h4> <span style="color:red">Profession:</span> @Model.Profession</h4>
            <h4> <span style="color:red">Image:</span> @Model.Image</h4>

            <div style="display:flex; gap:20px;">
                <a class="btn btn-info" asp-action="Index" style="margin-top:30px">Go Back</a>
                <form method="post">
                    <button type="submit" class="btn btn-danger" style="margin-top:30px">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

