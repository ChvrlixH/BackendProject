@model BlogVM;
@{
    ViewData["Title"] = "Blog page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

	<!-- Banner Area Start -->
		<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>blog</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
		<!-- Banner Area End -->
        <!-- Blog Start -->
        <div class="blog-area pt-150 pb-150">
            <div class="container">
                <div class="row">
                    @foreach(Blog blogItem in Model.blog)
                    {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-blog mb-60">
                            <div class="blog-img">
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogItem.Id"><img style="width:370px; height:250px;" src="~/admin/images/faces/@blogItem.Image" alt="blog"></a>
                                <div class="blog-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </div>
                            <div class="blog-content">
                                <div class="blog-top" >
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogItem.Id">   <p>@blogItem.Name  /  @blogItem.Date  /  <i class="fa fa-comments-o"></i> @blogItem.Comment</p> </a>
                                </div>
                                <div class="blog-bottom">
                                <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogItem.Id">@blogItem.Title </a></h2>
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogItem.Id">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
            }
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="pagination">
                            <ul>
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Blog End -->


