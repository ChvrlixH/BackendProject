@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Teacher page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
             @foreach(Teacher teacher in Model)
                {
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher mb-45">
                    <div class="single-teacher-img">
                            <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id"><img style="width:270px; height:270px;" src="~/admin/images/faces/@teacher.Image" alt="teacher"></a>
                    </div>
                    <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id">@teacher.Fullname</a></h2>
                        <h4>@teacher.Profession</h4>
                        <ul>
                            <li><a href="@teacher.SocialMedias.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teacher.SocialMedias.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="@teacher.SocialMedias.Instagram"><i class="zmdi zmdi-instagram"></i></a></li>
                                <li><a href="@teacher.SocialMedias.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->

