@model HomeVM;
@{
    ViewData["Title"] = "Home page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- About Start -->
<div class="about-area pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>WELCOME TO <span>EDUHOME</span></h2>
                    <p>I must explain to you how all this mistaken idea of denouncing pleure and prsing pain was born and I will give you a complete account of the system, and expound the actual teachings  the master-builder of humanit happiness</p>
                    <p class="hidden-sm">I must explain to you how all this mistaken idea of denouncing pleure and prsing pain was born and I will give you a complete account of the system</p>
                    <a class="default-btn" asp-controller="Courses">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="img/about/about.png" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<div class="courses-area two pt-150 pb-150 text-center">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="section-title">
                            <img src="img/icon/section1.png" alt="section-title">
                            <h2>COURSES WE OFFER</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach(Course course in Model.Courses)
                    {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-course">
                            <div class="course-img">
                            <a asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id">
                                <img style="width:370px; height:245px;" src="~/admin/images/faces/@course.Image" alt="course">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="course-content">
                            <h3><a asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id">@course.Title</a></h3>
                                @if(course.Description.Length >= 130)
                                {
                            <p>
                                @Html.Raw(course.Description.Substring(0,130))...
                                </p>
                            }
                            else
                            {
                                @Html.Raw(course.Description)
                            }
                            <a class="default-btn" asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id">read more</a>
                            </div>   
                        </div>
                    </div>
            }
                </div>
            </div>
        </div>
<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(Event _event in Model.Events)
            {
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="single-event mb-35">
                    <div class="event-img">
                            <a asp-controller="Event" asp-action="Detail" asp-route-id="@_event.Id"><img style="width:214px; height:197px;" src="~/admin/images/faces/@_event.Image" alt="event"></a>
                    </div>
                    <div class="event-content text-left">
                        <h3>@_event.Day</h3>
                        <h4><a asp-controller="Event" asp-action="Detail" asp-route-id="@_event.Id">@_event.Title</a></h4>
                        <ul>
                            <li><i class="fa fa-clock-o"></i>@_event.Time</li>
                            <li><i class="fa fa-map-marker"></i>@_event.Venue</li>
                        </ul>
                        <div class="event-content-right">
                                <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-id="@_event.Id">join now</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(Blog blog in Model.Blogs)
            {
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-blog">
                    <div class="blog-img">
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><img src="~/admin/images/faces/@blog.Image" alt="blog"></a>
                        <div class="blog-hover">
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><i class="fa fa-link"></i></a>
                        </div>
                    </div>
                    <div class="blog-content">
                        <div class="blog-top">
                            <p>@blog.Name  /  @blog.Date  /  <i class="fa fa-comments-o"></i> @blog.Comment</p>
                        </div>
                        <div class="blog-bottom">
                                <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">@blog.Title</a></h2>
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">read more</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- Blog Area End -->